<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	<style name="chat_date_style">
	    <item name="android:padding">2dp</item>
	    <item name="android:textColor">#fff</item>
	    <item name="android:textSize">12sp</item>
	    <item name="android:background">#bfbfbf</item>
	</style>
	<style name="chat_content_style">
	    <item name="android:minHeight">50dp</item>
	    <item name="android:textSize">15sp</item>
	    <item name="android:textColor">#000</item>
	    <item name="android:clickable">true</item>
	    <item name="android:gravity">left|center</item> 
	    <item name="android:focusable">true</item>
	</style>
	<style name="chat_name_style">
	    <item name="android:textColor">#818181</item>   
		<item name="android:textSize">15sp</item>      
		<item name="android:gravity">center</item> 
	</style>
	    
    <style name="AnimTop2" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_top_in2</item>
        <item name="android:windowExitAnimation">@anim/push_top_out2</item>
    </style>
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    
    <style name="MyDialogStyleTop" parent="android:Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/AnimTop2</item>
        <item name="android:windowFrame">@null</item><!-- 边框 -->
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item><!-- 是否可以设置透明度 -->
        <item name="android:windowBackground">@android:color/transparent</item><!-- 背景透明度 -->
        <item name="android:backgroundDimEnabled">false</item><!-- 模糊 -->
    </style>
    <style name="MyDialogStyleBottom" parent="android:Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <item name="android:windowFrame">@null</item><!-- 边框 -->
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上,center_horizontal布局 -->
        <item name="android:windowIsTranslucent">true</item><!-- 是否可以设置透明度 -->
        <item name="android:windowBackground">@color/transparent</item><!-- 背景透明度 -->
        <item name="android:backgroundDimEnabled">true</item><!-- 模糊 -->
    </style>
    <style name="MyDialogStyle">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
