<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mywechat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.mywechat.activity.AppStart"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.mywechat.activity.Welcome"></activity>
        <activity android:name="com.example.mywechat.activity.Login"/>
        <activity android:name="com.example.mywechat.activity.LoadingActivity" android:theme="@android:style/Theme.Translucent"/>
       	<activity android:name="com.example.mywechat.activity.Whatsnew"/>
       	<activity android:name="com.example.mywechat.activity.WhatsnewDoor"/>
        <activity android:name="com.example.mywechat.activity.MainWeChat"/>
        <activity android:name="com.example.mywechat.activity.MainTopRightDialog" android:theme="@style/MyDialogStyleTop"/>
        <activity android:name="com.example.mywechat.activity.ChatActivity"/>
        <activity android:name="com.example.mywechat.activity.ExitFromSettings"/>
        <activity android:name="com.example.mywechat.activity.ShakeActivity"/>
    </application>

</manifest>
